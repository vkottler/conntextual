ChannelEnvironmentDisplay {
    layout: grid;
    grid-size: 3;
    height: 1fr;
}

TabPane {
    padding: 0;
}

.channels {
    row-span: 2;
    column-span: 3;
    scrollbar-size: 1 1;
}

# column-span: 2;
ChannelEnvironmentLog {
    column-span: 3;
    height: 100%;
}

Log {
    color: $text;
    background: $primary-background;
    scrollbar-size: 1 1;
}

.util {
    height: 100%;
}

.command_input {
    padding: 0;
    border: hidden;
    background: $primary-background-darken-2;
}

.command_input:focus {
    border: hidden;
    background: $primary-background-darken-1;
}
